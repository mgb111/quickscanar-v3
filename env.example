# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Google OAuth Configuration (Optional - for Google Sign-In)
# These are configured in Supabase dashboard, not needed in client-side env
# GOOGLE_CLIENT_ID=your_google_oauth_client_id
# GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# Additional Supabase Settings (Optional)
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_for_server_side_ops

# Production Configuration
NEXT_PUBLIC_SITE_URL=https://quickscanar.com
# NEXT_PUBLIC_VERCEL_URL=your-vercel-project.vercel.app

# File Upload Limits
MAX_FILE_SIZE_MB=100

# Google Analytics Configuration
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Cloudflare R2 Configuration (Alternative to Supabase Storage)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_ACCESS_KEY_ID=your_r2_access_key_id
CLOUDFLARE_SECRET_ACCESS_KEY=your_r2_secret_access_key
CLOUDFLARE_R2_BUCKET_NAME=quickscanar 
CLOUDFLARE_R2_PUBLIC_BASE_URL=https://pub-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx.r2.dev

# Polar Payment Configuration
POLAR_API_KEY=your_polar_api_key_for_server_side_ops
POLAR_WEBHOOK_SECRET=your_polar_webhook_secret_for_signature_verification

# Production Checkout URLs (default)
NEXT_PUBLIC_POLAR_HOBBY_CHECKOUT_URL=https://polar.sh/quickscanar/subscriptions?tier=hobby
NEXT_PUBLIC_POLAR_PRO_CHECKOUT_URL=https://polar.sh/quickscanar/subscriptions?tier=pro

# Sandbox Checkout URLs (for testing - uncomment to use)
# NEXT_PUBLIC_POLAR_HOBBY_CHECKOUT_URL=https://sandbox-api.polar.sh/v1/checkout-links/your_sandbox_hobby_link/redirect
# NEXT_PUBLIC_POLAR_PRO_CHECKOUT_URL=https://sandbox-api.polar.sh/v1/checkout-links/your_sandbox_pro_link/redirect

# Admin Dashboard Access
# Server-side check in API: ADMIN_DASHBOARD_TOKEN
# Client-side header injection: NEXT_PUBLIC_ADMIN_DASHBOARD_TOKEN (must match the server token)
ADMIN_DASHBOARD_TOKEN=choose_a_long_random_string
NEXT_PUBLIC_ADMIN_DASHBOARD_TOKEN=choose_a_long_random_string